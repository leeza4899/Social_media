<%- include ("../partials/header") %>
<link rel="stylesheet" href="/stylesheets/show_users.css">
<link rel="stylesheet" href="/stylesheets/cards.css">
<div class="row">
    <% users.forEach(function(user) { %>
    <div class="container">

        <div class="card-profile">
            <div class="card-profile_visual"> <img src="/images/user_dp/<%=user.image%>" alt="Profil Image"></div>

            <div class="card-profile_user-infos">
                <span class="infos_name"><%=user.name%></span>
                <span class="infos_nick">@<%=user.username%></span>

                <a href="/user/<%=user._id%>"></a>
            </div>

            <div class="card-profile_user-stats">
                <div class="stats-holder">
                    <div class="user-stats">
                        <strong>Following</strong>
                        <span><%=user.following.length%></span>
                    </div>
                    <div class="user-stats">
                        <strong>Followers</strong>
                        <span><%=user.followers.length%></span>
                    </div>
                </div>
            </div>

        </div>

    </div>

<%});%>
</div>


<%- include ("../partials/footer") %>