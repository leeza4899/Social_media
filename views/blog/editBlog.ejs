<%- include("../partials/header")%>

<div class="container">
    <%- include("../partials/message")%>
</div>
<link rel="stylesheet" href="/stylesheets/blog/add.css">

<h1>Edit <%= blog.title%></h1>
<div class="container jumbotron">
<form action="/blog/<%=blog._id%>?_method=PUT" method="POST">
    <div class="form-group">
        <label>Blog title:</label>
            <input type="text" name="title"  value= "<%= blog.title%>" placeholder="Title" id="title">
    </div>
    <div class="form-group">
        <label>Description:</label>
            <input type="text" name="desc" value= "<%= blog.desc%>" placeholder="Description" id="desc">
    </div>
    <div class="form-group">
        <label>Image:</label>
            <input type="file" name="image" value= "<%= blog.image%>" placeholder="Title" id="image">
    </div>

    <div class="form-group">
        <label>Blog category:</label>
        <input type="text" name="category" value= "<%= blog.category%>" placeholder="Category" id="category">
    </div>

    <button type="submit" class="btn btn-success">Edit post</button>

</form>
</div>




<%- include("../partials/footer")%>


